<!--pages/validation/validation.wxml-->
<import src="../common/head.wxml" />
<import src="../common/foot.wxml" />
<view class="container">
  <template is="head" data="{{title: 'validation'}}" />
  <view class='item'>
    <form bindsubmit='submitPhone'>
      <input placeholder='请输入你的电话号码' name="phone"></input>
    <button size='mini' form-type='submit'>提交</button>
    </form>
  </view>
  <view class='item'>
    <form bindsubmit='submitEmail'>
      <input placeholder='请输入你的邮箱' name='email'></input>
    <button size='mini' form-type='submit'>提交</button>
    </form>
  </view>
  <template is="foot" />
</view>
